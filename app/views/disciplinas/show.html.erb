<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  </head>
  <body>
  <div class="container">
    <h1 class="mt-4">Detalhes da Matéria</h1>

    <div class="row">
      <div class="col-md-6">
        <h3><%= @disciplina.titulo %></h3>
        <p><strong>Descrição:</strong> <%= @disciplina.descricao %></p>
        <p><strong>Local:</strong> <%= @disciplina.local %></p>
        <p><strong>Dia da Semana:</strong> <%= @disciplina.dias_semana %></p>
      </div>
    </div>


    <div class="my-4">
    <%= link_to root_path, class: "btn btn-primary" do %>
      <i class="fa-solid fa-arrow-left fa-xl" style="color: #ffffff;"></i>
    <% end %>
  
    <%= link_to edit_disciplina_path(@disciplina), class: "btn btn-primary" do %>
      <i class="fa-solid fa-pen-to-square fa-xl" style="color: white;"></i>
    <% end %>
  
    <%= link_to "Criar tarefa", new_disciplina_tarefa_path(@disciplina), class: "btn btn-success" %>
    <%= button_to @disciplina, method: :delete, data: { confirm: 'Tem certeza que deseja excluir esta disciplina?' }, class: "btn btn-danger mt-2" do %>
      <i class="fa-solid fa-trash fa-xl" style="color: white;"></i>
    <%end%>
  
  </div>
    

  </div>

  <script src="https://kit.fontawesome.com/c4c372d429.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</html>