<%= form_with(model: [@disciplina, @tarefa], local: true) do |f| %>
  <% if tarefa.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tarefa.errors.count, "error") %> prohibited this tarefa from being saved:</h2>

      <ul>
        <% tarefa.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :titulo, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :titulo, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :descricao, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :descricao, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :validade, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.date_field :validade, class: 'form-control' %>
    </div>
  </div>

  <div>
    <%= f.hidden_field :disciplina_id, value: @disciplina.id, disabled: true %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Create Task', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>